{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,

        "strict": true,

        "allowJs": true,

        "forceConsistentCasingInFileNames": true,

        "allowSyntheticDefaultImports": true,

        "declaration": true
    },
    "exclude": [
        "./node_modules/*"
    ]
}